#!/bin/bash

if [ "$#" -eq 2 ]; then
    a=$2
else
    a=$1
fi

base_dir=/Users/Phillip/Documents/Research/Resources/Notes/terminal_notes
fs=(`ls $base_dir | grep -v '.*~' | grep -v '^#.*' | grep '^'$a'.*'`)

if [ ${#fs[@]} -gt 1 ]; then
    #echo ${fs[@]}
    printf "\n"
    printf "%s\n" "${fs[@]}"
    printf "\n"
    exit
fi

f=${fs[0]}



while getopts ":ecwsh" opt; do
  case $opt in
    e)
      emacs $base_dir/$f
      exit
      ;;
    c)
      emacs $base_dir/$a
      exit
      ;;
    w)
      echo ${fs[*]}
      exit
      ;;
    s)
      grep -v '^[[:space:]]*#' $base_dir/$f | say
      exit
      ;;
    h)
      printf " read note: notes NOTE_NAME\n create note: notes -c NOTE_NAME\n edit note: notes -e NOTE_NAME\n say note: notes -s NOTE_NAME\nNOTE_NAME can be a partial match (if more than one match, lists options)\n\n"
      exit
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit
      ;;
  esac
done

less $base_dir/$f
